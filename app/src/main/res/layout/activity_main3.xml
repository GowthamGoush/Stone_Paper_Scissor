<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    android:background="@drawable/ic_background2"
    android:id="@+id/single_player_bg"
    >

    <TextView
        android:id="@+id/text_round_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_text"
        android:fontFamily="@font/audiowide1"
        android:paddingHorizontal="20dp"
        android:text="Round 1"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_text"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="150dp"
        android:text="Computer"
        android:textSize="20dp"
        android:background="@drawable/rounded_text2"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/setPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="70dp"
        android:text="You"
        android:textSize="20dp"
        android:background="@drawable/rounded_text2"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/score_bot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/rounded_score"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/score_you"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="70dp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/rounded_score"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="395dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_text"
        android:padding="5dp"
        />

    <ImageView
        android:id="@+id/stone_2"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/paper_2"
        android:background="@drawable/ic_stone"
        />

    <ImageView
        android:id="@+id/paper_2"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_paper" />

    <ImageView
        android:id="@+id/scissor_2"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:layout_toEndOf="@+id/paper_2"
        android:background="@drawable/ic_scissors" />

    <TextView
        android:id="@+id/winner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_text3"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        />

    <Button
        android:id="@+id/retry_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_below="@id/winner2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_retry"
        />

</RelativeLayout>